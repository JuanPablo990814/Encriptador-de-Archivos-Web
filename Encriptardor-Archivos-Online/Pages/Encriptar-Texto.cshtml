@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container row">
    <div class="col-8">
        <h1 class="text-primary">Encriptación de Texto</h1>
    </div>
</div>
<br />

<br />
@if (Model.Mensaje != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
}

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-3">
                        <h4 class="text-dark">Llave</h4>
                    </div>
                    <div class="col-8">
                        
                        <input type="text" name="textollave" placeholder="Escriba la llave secreta" class="form-control" />
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <h4 class="text-dark">Contenido</h4>
                    </div>
                    <div class="col-9">
                        <textarea asp-for="contenido" name="textocontenido" placeholder="Contenido a Encriptar o Desencriptar" cols="20" class="form-control"></textarea>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <button type="submit" asp-page-handler="Encriptar" class="btn btn-primary form-control">Encriptar</button>
                    </div>
                    <div class="col-6">
                        <button type="submit" asp-page-handler="Desencriptar" class="btn btn-primary form-control">Desencriptar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@if (Model.textoDE != null)
{
    <div class="border">
        <h4 class="text-primary">Texto Encriptado o Desencriptado</h4>
        @Model.textoDE
    </div>
}
